{
  "name": "time2sleep-react",
  "version": "1.0.1",
  "description": "A React + Electron Shutdown Timer",
  "author": "Martin Pham",
  "repository": "github:martinpham97/time2sleep-react",
  "main": "main.js",
  "build": {
    "appId": "com.electron.time2sleep",
    "productName": "time2sleep-react",
    "directories": {
      "output": "dist"
    },
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable"
        }
      ]
    },
    "mac": {
      "category": "Utilities",
      "target": "pkg"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage"
        },
        {
          "target": "tar.bz2"
        }
      ]
    }
  },
  "scripts": {
    "bundle": "webpack --mode development",
    "serve": "electron .",
    "start": "npm-run-all --parallel bundle serve",
    "pack": "electron-builder --dir",
    "dist-win": "electron-builder --win",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.5",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.10",
    "electron": "^1.8.2",
    "electron-builder": "^20.18.0",
    "eslint": "^5.0.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.10.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.10",
    "npm-run-all": "^4.1.2",
    "sass-lint": "^1.12.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11"
  },
  "dependencies": {
    "browserify-css": "^0.14.0",
    "electron-reload": "^1.2.2",
    "electron-shutdown-command": "^0.0.8",
    "lru-cache": "^4.1.3",
    "node-sass": "^4.9.0",
    "prop-types": "^15.6.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-ionicons": "^2.1.6",
    "react-skeleton-css": "^1.1.0",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0"
  }
}
